{
  "name": "ai-committer",
  "displayName": "AI Committer",
  "description": "AI-powered commit message generator with bug detection and autonomous committing",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:ai-committer.generateCommit"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-committer.generateCommit",
        "title": "Generate AI Commit Message",
        "icon": "$(sparkle)"
      },
      {
        "command": "ai-committer.analyzeBugs",
        "title": "AI Committer: Analyze Code for Bugs",
        "icon": "$(bug)"
      },
      {
        "command": "ai-committer.autonomousCommit",
        "title": "AI Committer: Autonomous Commit with Analysis",
        "icon": "$(rocket)"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "ai-committer.generateCommit",
          "group": "navigation",
          "when": "scmProvider == git"
        }
      ]
    },
    "configuration": {
      "title": "AI Committer",
      "properties": {
        "aiCommitter.apiProvider": {
          "type": "string",
          "default": "openai",
          "enum": [
            "openai",
            "anthropic",
            "gemini",
            "ollama"
          ],
          "description": "AI provider to use"
        },
        "aiCommitter.openai.apiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API key"
        },
        "aiCommitter.openai.model": {
          "type": "string",
          "default": "gpt-3.5-turbo",
          "description": "OpenAI model to use"
        },
        "aiCommitter.anthropic.apiKey": {
          "type": "string",
          "default": "",
          "description": "Anthropic API key"
        },
        "aiCommitter.anthropic.model": {
          "type": "string",
          "default": "claude-3-haiku-20240307",
          "description": "Anthropic model to use"
        },
        "aiCommitter.gemini.apiKey": {
          "type": "string",
          "default": "",
          "description": "Google Gemini API key"
        },
        "aiCommitter.gemini.model": {
          "type": "string",
          "default": "gemini-pro",
          "description": "Gemini model to use"
        },
        "aiCommitter.ollama.baseUrl": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "Ollama base URL"
        },
        "aiCommitter.ollama.model": {
          "type": "string",
          "default": "llama2",
          "description": "Ollama model to use"
        },
        "aiCommitter.bugDetection.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable AI-powered bug detection before commits"
        },
        "aiCommitter.bugDetection.severity": {
          "type": "string",
          "default": "medium",
          "enum": [
            "low",
            "medium",
            "high"
          ],
          "description": "Minimum severity level to report bugs"
        },
        "aiCommitter.autonomous.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable autonomous committing (requires confirmation)"
        },
        "aiCommitter.autonomous.autoAnalyze": {
          "type": "boolean",
          "default": true,
          "description": "Automatically analyze code for bugs before autonomous commits"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "test": "node ./src/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.40.0"
  },
  "dependencies": {
    "openai": "^4.0.0",
    "@anthropic-ai/sdk": "^0.20.0",
    "@google/generative-ai": "^0.2.0",
    "axios": "^1.6.0"
  }
}
